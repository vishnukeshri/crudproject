<%- include ('layout/header') %>
<div class="container">
    <div class="row-4">
<div class="col-lg-12">
<% if (message) { %>
    <div class ="alert alert-dismissible fabe show alert-<%= message.type %>"
        role="alert">
    <button class ="btn-close" type="button" data-bs-dismiss="alert"
    aria-label="close"></button>
    <strong><%= message.message%></strong>
    </div>

<%}%>

    <div class ="table-responsive">
        <% if(Product!= '') { %>
               
  <table class ="table table-striped  text-center my-3 ">
<thead>
    <tr class="table-dark">
<th>index</th>
<th>Productname</th>
<th>Categoryname</th>
<th>Categoryid</th>
<th>Image</th>
<th>Action</th>
    </tr>
</thead>
<tbody>
<% Product.forEach((row,index) => {
     %>
     <tr>
        <td><%index%></td>
        <td><%row.Productname %></td>
        <td><% row.Categoryname %></td>
        <td><%row.Categoryid %></td>
        <td><img src="<%= row.image %>" width="50" class="img-thubnail"/></td>
        <td>
        <a href="/edit/<%=row.id%>" class="text-success"><i class="fas fa-edit  fa-lg  mx-2 " ></i></a>
        <a href="/delete/<%=row.id%>" class="text-Are you sure ?"><i class="fas fa-trash  fa-lg  mx-2 " ></i></a>
        </td>
        </tr>
  <% }) %>
</tbody>
  </table>
  <%}else{%>
    <h1 class="text-center text-secondary mt-5"> No users found in the database</h1>
    <%} %>
  </div>
  </div>
  </div>
  </div>
<%- include ('layout/footer') %>